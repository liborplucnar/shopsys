{% block price_list_overview_widget %}
    <div class="form-line__box">
        {% if isMultidomain() %}
            <div class="form-line__box__title">
                <span class="form-line__box__title__image">
                    {{ domainIcon(domainId, 'large') }}
                </span>
                <strong class="form-line__box__title__name">
                    {{ 'Domain %domainName%'|trans({'%domainName%' : getDomainName(domainId)}) }}
                </strong>
            </div>
        {% endif %}
        <div class="form-line form-line__box__content">
            {% if specialPrices is empty %}
                <div class="form-line__item form-line__item--text">
                    {{ 'No special price is active or planned.'|trans }}
                </div>
            {% else %}
                <table class="table-form">
                    <thead>
                    <tr class="table-form__row">
                        <th class="table-form__cell table-form__cell--label">{{ 'Price list'|trans }}</th>
                        <th class="table-form__cell table-form__cell--label">{{ 'Valid from'|trans }}</th>
                        <th class="table-form__cell table-form__cell--label">{{ 'Valid to'|trans }}</th>
                        <th class="table-form__cell table-form__cell--label">{{ 'Special price' |trans }} {{ priceVatLabel() }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set isHighlighted = false %}
                    {% for specialPrice in specialPrices %}
                        <tr class="table-form__row {{ not isHighlighted and specialPrice.isNowActive ? "highlight" }}">
                            <td class="table-form__cell">
                                <a href="{{ url('admin_pricelist_edit', {id: specialPrice.priceListId}) }}"
                                   target="_blank"
                                   class="btn-link-style btn-link-style--iconic-l">
                                    <span>{{ specialPrice.priceListName }}</span>&nbsp;
                                    {{ icon('forward-page') }}
                                </a>
                            </td>
                            <td class="table-form__cell">{{ specialPrice.validFrom|formatDateTime }}</td>
                            <td class="table-form__cell">{{ specialPrice.validTo|formatDateTime }}</td>
                            <td class="table-form__cell">{{ specialPrice.price.priceWithVat|priceWithCurrencyByDomainId(domainId) }}</td>
                        </tr>
                        {% if not isHighlighted and specialPrice.isNowActive %}
                            {% set isHighlighted = true %}
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}
