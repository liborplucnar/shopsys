{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Watchdog - '|trans }} {{ product|productDisplayName }}{% endblock %}
{% block h1 %}{{ 'Watchdog - '|trans }} {{ product|productDisplayName }}{% endblock %}

{% block main_content %}
    <div class="wrap-divider wrap-divider--bottom">
        {{ block('product_visibilities', '@ShopsysFramework/Admin/Content/Product/edit.html.twig') }}
    </div>

    <div class="in-tab js-tabs">
        <div class="in-tab__heading">
            <a href="#"
               class="in-tab__heading__item js-tabs-button active"
               data-tab-id="quick"
            >
                {{ 'Quick search'|trans }}
            </a>
        </div>
        <div class="in-tab__content">
            <div class="in-tab__content__in js-tabs-content" data-tab-id="quick">
                {% include '@ShopsysFramework/Admin/Content/Watchdog/Detail/quickSearchFormContent.html.twig' with {quickSearchForm: quickSearchForm} %}
            </div>
        </div>
    </div>

    {{ render(controller('Shopsys\\FrameworkBundle\\Controller\\Admin\\DomainFilterController::domainFilterTabsAction', { namespace: domainFilterNamespace })) }}

    {{ gridView.render() }}

    {% embed '@ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
        {% block fixed_bar_content %}
            <a href="{{ url('admin_watchdog_list') }}" class="btn-link-style">{{ 'Back to overview'|trans }}</a>
        {% endblock %}
    {% endembed %}
{% endblock %}
